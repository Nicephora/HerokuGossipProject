<div class="d-flex justify-content-center">
  <div class="row">
    <%- @gossip_array.each do |gossip| -%>
    <div class="col-md-4 col-lg-5 h-50">
      <h2>Titre :<%= link_to gossip.title, gossip_path(gossip.id) %></h2>
      <p>Auteur: <%= link_to gossip.user.first_name + " " + gossip.user.last_name.upcase, user_path(gossip.user.id) %><br><small><%= gossip.comments.where(gossip: gossip).length%> commentaires</small><br></p>
      <p><a class="btn btn-secondary" <a href="<%= gossip_path(gossip.id)%>" role="button">Lire le gossip</a></p>
    </div>
    <%- end -%>
  </div>
</div>
