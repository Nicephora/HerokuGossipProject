
<%- @gossip_array.each do |gossip| -%>
<div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Titre :<%= link_to gossip.title, gossip_display_path(gossip.id) %></h5>
    <p class="card-text">Auteur: <%= link_to gossip.user.first_name + " " + gossip.user.last_name.upcase, user_display_path(gossip.user.id) %>
    </p>
  </div>
</div>
<%- end -%>
